
        <h4 class="mt-2">
         Your Products </h4>
         <p><a href="/products/public"> See the public list </a></p>
        

         <hr>

    <form action="/products/create" method="post">
        <button class="mt-2 mb-2" type="submit"><img src="/images/add.png" width="20" height="20" alt="">Add a new product</button>
     </form>
      
      <% for(var i=prods.length-1;i>=0;i--) { %>
         <% var name = ""; %>
         <% if(prods[i].name =='empty') name = prods[i].receiptName; else {name = name=prods[i].name;} %>
         <div class="mb-3 p-3 rounded bg-primary" onclick="gotoProduct('<%= prods[i].id %>')">
         <p>Name: <%= name %></p>
         <p>Company: <%= prods[i].company %></p>
         <form action="/products/remove/<%= prods[i].id %>" method="post">
           <button class="mt-2" type="submit"><img src="/images/delete.png" width="20" height="20" alt="">Delete this Product!</button>
        </form>
         </div>
      <% } %>
  
  